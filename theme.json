{
	"version": 2,
	"settings": {
		"spacing": {
			"blockGap": true,
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"appearanceTools": true,
		"layout": {
			"contentSize": "960px",
			"wideSize": "1300px"
		},
		"border": {
			"customColor": true,
			"radius": true,
			"customStyle": true,
			"customWidth": true
		},
		"color": {
			"link": true,
			"gradient": false,
			"palette": [
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				},
				{
					"slug": "ramp-blue",
					"color": "#4B6687",
					"name": "Research AMP Blue"
				},
				{
					"slug": "ramp-red",
					"color": "#23282D",
					"name": "Research AMP Red"
				},
				{
					"slug": "almost-black",
					"color": "#222",
					"name": "Almost black"
				},
				{
					"slug": "light-grey",
					"color": "#eee",
					"name": "Light grey"
				}
			]
		},
    "typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Open Sans\", \"Segoe UI\", Tahoma, sans-serif",
					"slug": "open-sans",
					"name": "Open Sans"
				},
				{
					"fontFamily": "\"PT Serif\", Georgia, serif",
					"slug": "pt-serif",
					"name": "PT Serif"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "16px",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "18px",
					"name": "Normal"
				},
				{
					"slug": "medium",
					"size": "24px",
					"name": "Medium"
				},
				{
					"slug": "medium-large",
					"size": "28px",
					"name": "Medium-Large"
				},
				{
					"slug": "big",
					"size": "32px",
					"name": "Big"
				},
				{
					"slug": "huge",
					"size": "36px",
					"name": "Huge"
				}
			]
		},
		"blocks": {}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--pt-serif)",
			"fontSize": "var(--wp--preset--font-size--normal)"
		},
		"spacing": {
			"blockGap": "16px"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--open-sans)",
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--open-sans)",
					"fontSize": "var(--wp--preset--font-size--big)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--open-sans)",
					"fontSize": "var(--wp--preset--font-size--medium-large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--open-sans)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--open-sans)",
					"fontSize": "22px"
				}
			},
			"p": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--pt-serif)",
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--almost-black)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/separator": {
				"style": {
					"spacing": {
						"padding": {
							"top": "1em",
							"bottom": "1em"
						}
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "archive-ramp_citation",
			"title": "Citation Library",
			"postTypes": [ "ramp_citation" ]
		},
		{
			"name": "archive-ramp_review",
			"title": "Research Review Archive",
			"postTypes": [ "ramp_review" ]
		},
		{
			"name": "archive-ramp_topic",
			"title": "Research Topic Archive",
			"postTypes": [ "ramp_topic" ]
		},
		{
			"name": "front-page",
			"title": "Home Page",
			"postTypes": []
		},
		{
			"name": "single-ramp_topic",
			"title": "Research Topic Landing Page",
			"postTypes": [ "ramp_topic" ]
		},
		{
			"name": "single-ramp_profile",
			"title": "Single Profile",
			"postTypes": [ "ramp_profile" ]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"area": "header",
			"title": "Header: Default"
		},
		{
			"name": "header-condensed",
			"title": "Header: Condensed",
			"area": "header"
		},
		{
			"name": "header-centered",
			"title": "Header: Centered",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	]
}
