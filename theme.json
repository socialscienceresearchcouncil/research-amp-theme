{
	"version": 2,
	"settings": {
		"spacing": {
			"blockGap": true,
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"appearanceTools": true,
		"layout": {
			"contentSize": "960px",
			"wideSize": "1300px"
		},
		"border": {
			"customColor": true,
			"radius": true,
			"customStyle": true,
			"customWidth": true
		},
		"color": {
			"link": true,
			"gradient": false,
			"palette": [
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				},
				{
					"slug": "blue",
					"color": "#0073AA",
					"name": "WordPress blue"
				},
				{
					"slug": "dark-grey",
					"color": "#23282D",
					"name": "Dark grey"
				},
				{
					"slug": "almost-black",
					"color": "#222",
					"name": "Almost black"
				},
				{
					"slug": "light-grey",
					"color": "#ddd",
					"name": "Light grey"
				}
			]
		},
    "typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell, \"Helvetica Neue\",sans-serif",
					"slug": "system-font",
					"name": "System Font"
				},
				{
					"fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
					"slug": "helvetica-arial",
					"name": "Helvetica or Arial"
				},
				{
					"fontFamily": "Georgia, Times New Roman, serif",
					"slug": "georgia",
					"name": "Georgia"
				}
			],
			"fontSizes": [
				{
					"slug": "normal",
					"size": 16,
					"name": "Normal"
				},
				{
					"slug": "big",
					"size": 32,
					"name": "Big"
				}
			]
		},
		"blocks": {
			"core/heading": {
				"color": {
					"palette": [
						{
						"slug": "white",
						"color": "#fff",
						"name": "White"
						},
						{
							"slug": "medium-blue",
							"color": "#00A0D2",
							"name": "Medium blue"
						}
					]
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--helvetica-arial)"
		},
		"spacing": {
			"blockGap": "16px"
		},
		"elements": {
			"h2": {
				"color": {
					"text": "var(--wp--preset--color--almost-black)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--almost-black)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/separator": {
				"style": {
					"spacing": {
						"padding": {
							"top": "1em",
							"bottom": "1em"
						}
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "archive-ssrc_restop_pt",
			"title": "Research Topic Archive",
			"postTypes": [ "ssrc_restop_pt" ]
		},
		{
			"name": "front-page",
			"title": "Home Page",
			"postTypes": []
		},
		{
			"name": "single-ssrc_restop_pt",
			"title": "Research Topic Landing Page",
			"postTypes": [ "ssrc_restop_pt" ]
		},
		{
			"name": "single-ssrc_schprof_pt",
			"title": "Single Profile",
			"postTypes": [ "ssrc_schprof_pt" ]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"area": "header",
			"title": "Header: Default"
		},
		{
			"name": "header-condensed",
			"title": "Header: Condensed",
			"area": "header"
		},
		{
			"name": "header-centered",
			"title": "Header: Centered",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	]
}
