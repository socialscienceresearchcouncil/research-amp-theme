{
	"version": 2,
	"settings": {
		"spacing": {
			"blockGap": true,
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"appearanceTools": true,
		"layout": {
			"contentSize": "1160px",
			"wideSize": "1300px"
		},
		"border": {
			"customColor": true,
			"radius": true,
			"customStyle": true,
			"customWidth": true
		},
		"color": {
			"link": true,
			"gradient": false,
			"palette": [
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				},
				{
					"slug": "ramp-blue",
					"color": "rgba(75, 102, 135, 1)",
					"name": "Research AMP Blue"
				},
				{
					"slug": "ramp-blue-desaturated",
					"color": "rgba(75, 102, 135, .85)",
					"name": "Research AMP Blue Desaturated"
				},
				{
					"slug": "ramp-red",
					"color": "rgba(168,53,53,1)",
					"name": "Research AMP Red"
				},
				{
					"slug": "ramp-red-desaturated",
					"color": "rgba(168,53,53,.85)",
					"name": "Research AMP Red Desaturated"
				},
				{
					"slug": "almost-black",
					"color": "#222",
					"name": "Almost black"
				},
				{
					"slug": "light-grey",
					"color": "#f3f4f4",
					"name": "Light grey"
				}
			]
		},
    "typography": {
			"fontFamilies": [
				{
					"fontFamily": "Inter, \"Segoe UI\", Tahoma, Arial, Helvetica, sans-serif",
					"slug": "inter",
					"name": "inter"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": ".9rem",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "18px",
					"name": "Normal"
				},
				{
					"slug": "medium-small",
					"size": "1.2rem",
					"name": "Medium Small"
				},
				{
					"slug": "medium",
					"size": "1.4rem",
					"name": "Medium"
				},
				{
					"slug": "medium-large",
					"size": "1.8rem",
					"name": "Medium-Large"
				},
				{
					"slug": "big",
					"size": "2rem",
					"name": "Big"
				},
				{
					"slug": "huge",
					"size": "2.2rem",
					"name": "Huge"
				}
			]
		},
		"blocks": {}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--normal)"
		},
		"spacing": {
			"blockGap": "16px"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "600"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--big)",
					"fontWeight": "600"
				},
				"spacing": {
					"margin": {
						"top": ".5em",
						"right": "0",
						"bottom": ".5em",
						"left": "0"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium-large)",
					"fontWeight": "600"
				},
				"spacing": {
					"margin": {
						"top": ".5em",
						"right": "0",
						"bottom": ".5em",
						"left": "0"
					}
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600"
				},
				"spacing": {
					"margin": {
						"top": ".5em",
						"right": "0",
						"bottom": ".5em",
						"left": "0"
					}
				}
			},
			"h5": {
				"typography": {
					"fontSize": "22px",
					"fontWeight": "600"
				},
				"spacing": {
					"margin": {
						"top": ".5em",
						"right": "0",
						"bottom": ".5em",
						"left": "0"
					}
				}
			},
			"p": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"lineHeight": "1.6rem"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--almost-black)"
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/separator": {
				"style": {
					"spacing": {
						"padding": {
							"top": "1em",
							"bottom": "1em"
						}
					}
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontStyle": "italic"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "archive-ramp_citation",
			"title": "Citation Library",
			"postTypes": [ "ramp_citation" ]
		},
		{
			"name": "archive-ramp_profile",
			"title": "Profile Archive",
			"postTypes": [ "ramp_profile" ]
		},
		{
			"name": "archive-ramp_review",
			"title": "Research Review Archive",
			"postTypes": [ "ramp_review" ]
		},
		{
			"name": "archive-ramp_topic",
			"title": "Research Topic Archive",
			"postTypes": [ "ramp_topic" ]
		},
		{
			"name": "front-page",
			"title": "Home Page",
			"postTypes": []
		},
		{
			"name": "single-ramp_topic",
			"title": "Research Topic Landing Page",
			"postTypes": [ "ramp_topic" ]
		},
		{
			"name": "single-ramp_profile",
			"title": "Single Profile",
			"postTypes": [ "ramp_profile" ]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"area": "header",
			"title": "Header: Default"
		},
		{
			"name": "header-centered",
			"title": "Header: Centered",
			"area": "header"
		},
		{
			"name": "footer",
			"area": "footer"
		}
	]
}
